package com.bridgelabz.functional;

import java.util.Scanner;

import com.bridgelabz.utility.Utility;

public class TwoDArray 
{
	public static void main(String[] args) 
	{
		Scanner scanner=new Scanner(System.in);
		int row,col;
		System.out.println("Enter Rows and Columns of array=");
		row=scanner.nextInt();
		col=scanner.nextInt();
		int twodarray[][]=new int[row][col];
		for(int i=0;i<row;i++)
		{
			for(int j=0;j<col;j++)
			{
				System.out.print("arr["+i+"]["+j+"]=");
				twodarray[i][j]=scanner.nextInt();
			}
		}
		int choice=0;
		do
		{
			System.out.println("1 Integers.");
			System.out.println("2 Double.");
			System.out.println("3 Boolean.");
			System.out.println("4 Exit.");
			System.out.println("Enter your choice=");
			switch(choice)
			{
			case 1:Utility.integer2DArray();
				break;
			case 2:Utility.double2DArray();
				break;
			case 3:Utility.boolean2DArray();
				break;
			default:
				System.out.println("Invalid input Enter again");
			}
		}
		while(choice!=4);
		scanner.close();
	}
}