package com.bridgelabz.utility;

public class Queue 
{
	private int front;
	private int rear;
	private Object queue[];
	private int size;
	
	public Queue(int capacity)
	{
		size=capacity;
		queue=new Object[capacity];
		front=0;
		rear=-1;
	}
	public boolean isEmpty()
	{
		if(rear==-1)
		{
			return true;
		}
		else
		{
			return false;
		}
	}
	public boolean isFull()
	{
		if(rear==size)
		{
			return true;
		}
		else
		{
			return false;
		}
	}
	public int size()
	{
		return rear+1;
	}
	public void enqueue(Object item)
	{
		rear++;
		if(isFull())
		{
			System.out.println("Queue is Full.");
		}
		else
		{
			queue[rear]=item;
		}
	}
}