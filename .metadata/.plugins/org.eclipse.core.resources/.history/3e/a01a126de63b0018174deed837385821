package com.bridgelabz.addressbook;

import com.bridgelabz.utility.Utility;

public class MainAddressBook 
{
	public static void main(String[] args) 
	{
		int choice=0;
		String addressBookName=null;
		String folderPath="/BasicProject/Files/AddressBookFiles/";
		AddressBookManager manager=new AddressBookManager();
		AddressBook addressBook=null;
		Utility utility=new Utility();
		
		
		do
		{
			System.out.println("1. Open Existing Address Book");
			System.out.println("2. Create New Address Book");
			System.out.println("3. Save Address Book");
			System.out.println("4. Exit");
			
			switch(choice)
			{
			case 1:
				System.out.println("Enter Address Book Name");
				addressBookName=folderPath+utility.next()+".txt";
				addressBook=manager.openAddressBook(addressBookName);
				manager.printAddressBook(addressBook);
				break;
				
			case 2:
				System.out.println("Enter Address Book Name");
				addressBookName=folderPath+utility.next()+".txt";
				manager.newAddressBook(filePath);
				break;
			}
		}
		while(choice!=10);
	}
}