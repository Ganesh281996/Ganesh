package com.bridgelabz.addressbook;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import org.codehaus.jackson.JsonGenerationException;
import org.codehaus.jackson.map.JsonMappingException;
import org.codehaus.jackson.map.ObjectMapper;
import com.bridgelabz.utility.Utility;

public class AddressBookManager 
{
	List<Person> personList;
	String addressBookName,folderPath,filePath;
	Utility utility=new Utility();
	AddressBook addressBook;
	ObjectMapper objectMapper=new ObjectMapper();
	File file;
	
	void saveAddressBook(AddressBook addressBook)
	{
		try
		{
			objectMapper.writeValue(file, addressBook);
		}
		catch(JsonMappingException e)
		{
			e.printStackTrace();
		} 
		catch (JsonGenerationException e) 
		{
			e.printStackTrace();
		} 
		catch (IOException e) 
		{
			e.printStackTrace();
		}
	}
	
	AddressBook openAddressBook(String addressBookName)
	{
		filePath=folderPath+"/"+addressBookName;
		try 
		{
			addressBook=objectMapper.readValue(filePath, AddressBook.class);
		} 
		catch (IOException e) 
		{
			e.printStackTrace();
		}
		return addressBook;
	}
	
	AddressBook newAddressBook()
	{
		personList=new ArrayList<Person>();
		addressBook=new AddressBook(personList);
		return addressBook;
	}	
}