package com.bridgelabz.algorithm;

import java.util.Collections;
import java.util.HashMap;
import java.util.Scanner;
import java.util.TreeMap;

import com.bridgelabz.utility.Utility;

public class SearchSortMethods4 
{
	public static void main(String[] args) 
	{
		Scanner scanner=new Scanner(System.in);
		System.out.println("Input size of Arrays=");
		long currenttime;
		TreeMap<String, Long> elapsedtime=new TreeMap<String, Long>();
		int size=scanner.nextInt();
		int integerarray[]=new int[size];
		String stringarray[]=new String[size];
		System.out.println("Input integer array=");
		for(int i=0;i<size;i++)
		{
			integerarray[i]=scanner.nextInt();
		}
		for(int i=0;i<size;i++)
		{
			stringarray[i]=scanner.next();
		}
		System.out.println("Input String array=");
		System.out.println("Enter number to search in integer array=");
		int number=scanner.nextInt();
		System.out.println("Enter String to search in String array=");
		String string=scanner.next();
		currenttime=System.currentTimeMillis();
		Utility.bubbleSortInteger(integerarray);
		elapsedtime.put("bubbleSortInteger", System.currentTimeMillis()-currenttime);
		currenttime=System.currentTimeMillis();
		System.out.println("Bubble Sort Integers");
		for(int i=0;i<size;i++)
		{
			System.out.print(integerarray[i]+"  ");
		}
		Utility.bubbleSortString(stringarray);
		elapsedtime.put("bubbleSortString", System.currentTimeMillis()-currenttime);
		currenttime=System.currentTimeMillis();
		System.out.println("Bubble Sort String");
		for(int i=0;i<size;i++)
		{
			System.out.print(stringarray[i]+"  ");
		}
		Utility.insertionSortInteger(integerarray);
		elapsedtime.put("insertionSortInteger", System.currentTimeMillis()-currenttime);
		currenttime=System.currentTimeMillis();
		System.out.println("Insertion Sort Integers");
		for(int i=0;i<size;i++)
		{
			System.out.print(integerarray[i]+"  ");
		}
		Utility.insertionSortString(stringarray);
		elapsedtime.put("insertionSortString", System.currentTimeMillis()-currenttime);
		currenttime=System.currentTimeMillis();
		System.out.println("Insertion Sort Integers");
		for(int i=0;i<size;i++)
		{
			System.out.print(integerarray[i]+"  ");
		}
		Utility.binarySearchInteger(integerarray, number);
		elapsedtime.put("binarySearchInteger", System.currentTimeMillis()-currenttime);
		currenttime=System.currentTimeMillis();
		System.out.println("Bubble Sort Integers");
		for(int i=0;i<size;i++)
		{
			System.out.print(integerarray[i]+"  ");
		}
		Utility.binarySearchString(stringarray, string);
		elapsedtime.put("binarySearchString", System.currentTimeMillis()-currenttime);
		
		scanner.close();
	}
}