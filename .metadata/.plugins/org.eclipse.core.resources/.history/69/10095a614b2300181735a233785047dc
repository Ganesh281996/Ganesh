package com.bridgelabz.utility;

public class Stack<T>
{
	private int top;
	private LinkedList<T> stack=null;
	private int capacity=0;
	
	public Stack(int capacity)
	{
		stack=new LinkedList<>();
		this.capacity=capacity;
		top=0;
	}
	public boolean isEmpty()
	{
		if(top==0)
		{
			return true;
		}
		else
		{
			return false;
		}
	}
	public boolean isFull()
	{
		if(top==capacity)
		{
			return true;
		}
		else
		{
			return false;
		}
	}
	public void push(Object item)
	{
		if(!isFull())
		{
			stack[top]=item;
			top++;
		}
		else
		{
			System.out.println("Stack is Full.");
		}
	}
	public Object pop()
	{
		Object item=null;
		if(isEmpty())
		{
			item="stack is Empty";
		}
		else
		{
			item=stack[top];
			top--;
		}
		return item;
	}
	public Object peek()
	{
		return stack[top];
	}
	public int size()
	{
		return top;
	}
}