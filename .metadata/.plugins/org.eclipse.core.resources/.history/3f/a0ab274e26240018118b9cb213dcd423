package com.bridgelabz.datastructure;

import com.bridgelabz.utility.Queue;
import com.bridgelabz.utility.Utility;

public class CalendarQueue 
{
	public static void main(String[] args) 
	{
		Utility utility=new Utility();
		Queue<Queue> calendar=new Queue<>(7);
		Queue<String> weekdays[]=new Queue[7];
		System.out.println("Enter the Year =");
		int year=utility.nextInt();
		System.out.println("Enter the Month=");
		int month=utility.nextInt();
		String array[][]=Utility.calender(year, month);
		String arr[];
		for(int i=0;i<7;i++)
		{
			for(int j=0;j<7;j++)
			{
				System.out.print(array[i][j]+" ");
			}
			System.out.println();
		}
		for(int i=0;i<7;i++)
		{
			weekdays[i]=new Queue<String>(7);
		}
		for(int i=0;i<7;i++)
		{
			for(int j=0;j<7;j++)
			{
				weekdays[j].enQueue(array[i][j]);
			}
		}
		for(int i=0;i<7;i++)
		{
			arr=weekdays[i].retrieve();
			for(int j=0;j<7;j++)
			{
				System.out.print(arr[j]);
			}
			System.out.println();
		}
	}
}